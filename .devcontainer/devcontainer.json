// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-in-docker
{
	"dockerComposeFile": "docker-compose.yml",
	"service": "devcontainer",
	"name": "Summer Build",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"version": "latest",
			"moby": "true"
		},
		"ghcr.io/devcontainers-extra/features/supabase-cli:1": {
			"version": "latest"
		},
		"ghcr.io/va-h/devcontainers-features/uv:1": {
			"shellautocompletion": true,
			"version": "latest"
		}
	},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		8080
	],
	// Use 'postCreateCommand' to run commands after the container is created.
	// This command does two things:
	// 1. Installs json5 for JSON validation in pre-commit hooks
	// 2. Configures Git to use .githooks directory instead of .git/hooks
	//    This ensures all developers use the same pre-commit hooks for consistent code formatting
	"postCreateCommand": "pip install json5 && git config core.hooksPath .githooks",
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"vscjava.vscode-java-pack",
				"vmware.vscode-spring-boot",
				"vscjava.vscode-spring-boot-dashboard",
				"redhat.vscode-xml",
				"ms-azuretools.vscode-docker"
			]
		}
	},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "root"
}
